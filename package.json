{
  "name": "ruby-design-system",
  "version": "1.0.0",
  "description": "Ruby Design System - React component library with TypeScript support",
  "keywords": [
    "react",
    "typescript",
    "components",
    "design-system",
    "ui"
  ],
  "author": "Ruby",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ruby-design-system.git"
  },
  "homepage": "https://your-storybook-url.com",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@uiw/react-md-editor": "^4.0.8",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/addon-onboarding": "^10.0.7",
    "@storybook/preset-create-react-app": "^10.0.7",
    "@storybook/react-webpack5": "^10.0.7",
    "@storybook/testing-library": "^0.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/styled-components": "^5.1.36",
    "eslint-plugin-storybook": "^10.0.7",
    "prop-types": "^15.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "rimraf": "^3.0.2",
    "storybook": "^10.0.7",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "webpack": "^5.102.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run build:lib",
    "build:lib": "npm run clean && tsc -p tsconfig.lib.json && npm run build:esm",
    "build:esm": "tsc -p tsconfig.lib.json --module esnext --outDir dist/esm && node build-scripts/post-build.js",
    "build:dev": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:storybook/recommended"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
